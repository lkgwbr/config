{
    // Theme & high-level
    "workbench.colorTheme": "White",
    "window.zoomLevel": 0,
    "editor.suggestSelection": "first",
    "editor.detectIndentation": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,

    // Font
    "editor.fontFamily": "Hack",
    "editor.fontSize": 10,
    "editor.fontLigatures": true,
    "debug.console.fontSize": 10,
    "terminal.integrated.fontSize": 10,
    "terminal.integrated.lineHeight": 0,
    "terminal.integrated.fontFamily": "Hack",

    // Vim
    "vim.easymotionMarkerFontSize": "10",
    // Prevent Vim from intercepting Zen mode shortcut
    "vim.handleKeys": {
        "<C-k>": false
    },

    // Language-specific
    "markdown.preview.fontSize": 10,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "python.linting.enabled": true,
    "python.pythonPath": "/usr/local/bin/python3",
    "python.jediEnabled": false,
    "[python]": {
        "editor.rulers": [
            79,
            79,
        ],
        "editor.defaultFormatter": "ms-python.python"
    },
    "[javascript]": {
        "editor.rulers": [
            80
        ]
    },
    "[javascriptreact]": {
        "editor.rulers": [
            80,
            100
        ]
    },
    "[git-commit]": {"editor.rulers": [50]},

    // Plugin
    "nightswitch.geolocation": true,
    "nightswitch.dayTheme": "White",
    "nightswitch.nightTheme": "White Night",
    "aws.profile": "profile:default",
    "aws.samcli.location": "/usr/local/bin/sam",
}
